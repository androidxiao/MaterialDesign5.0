        <com.material.design.widget.widget.CommonItemView
            android:id="@+id/civ_ziping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.material.design.widget.widget.CommonItemView
            android:id="@+id/civ_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
