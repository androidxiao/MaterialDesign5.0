<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/id_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="#d71345"
            />

        <TextView
            android:id="@+id/id_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.material.design.widget.widget.NumberView
            android:id="@+id/id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/id_btn_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平移"/>

        <Button
            android:id="@+id/id_btn_rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旋转"/>

        <Button
            android:id="@+id/id_btn_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缩放"/>

        <Button
            android:id="@+id/id_btn_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="透明度"/>

        <Button
            android:id="@+id/id_btn_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动画set"/>

    </LinearLayout>
</ScrollView>